extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)

block content
  h1 iMember
  div.berriesAndThoughts
    img(src='thought-bubble-right.png' class="thought-right")
    img(src='Member-berries.png' class="berries")
    img(src='thought-bubble-left.png' class="thought-left")
  ul
    li
      a(href='http://localhost:8080/users/register' id='logBtn')
        button(name='Register') Register
    li
      a(href='http://localhost:8080/users/login' id='regBtn')
        button(name='Login') Login
