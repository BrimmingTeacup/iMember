mixin field(labelText, fieldName, fieldValue, fieldType='text', placeholder=null)
  div(class = 'formGroup')
    label(for=fieldName)= labelText
    //- if fieldType === 'textarea'
    //-   textarea(id=fieldName name=fieldName class='formControl' rows='5')= fieldValue
    //- else
    input(type=fieldType id=fieldName name=fieldName value=fieldValue placeholder=placeholder class='formControl')
